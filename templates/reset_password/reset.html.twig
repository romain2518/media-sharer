{% extends 'base.html.twig' %}

{% block title %}Réinitialisation votre mot de passe{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/form.css') }}">
{% endblock %}

{% block body %}
<main>
    <section>
        <h2>Réinitialisation votre mot de passe</h2>

        {{ form_start(resetForm) }}
            {# Password #}
            {% if form_errors(resetForm.plainPassword.first) %}
                <div class="info error">
                    {{ form_errors(resetForm.plainPassword.first) }}
                </div>
            {% endif %}

            <div class="input-wrapper">
                {{ form_widget(resetForm.plainPassword.first, { 'attr': { 'placeholder': 'Mot de passe', 'class': 'needSameCheck' } }) }}
            </div>

            {# Password confirm #}
            {% if form_errors(resetForm.plainPassword.second) %}
                <div class="info error">
                    {{ form_errors(resetForm.plainPassword.second) }}
                </div>
            {% endif %}

            <div class="input-wrapper">
                {{ form_widget(resetForm.plainPassword.second, { 'attr': { 'placeholder': 'Confirmation de mot de passe', 'class': 'needSameCheck' } }) }}
            </div>

            <div class="input-wrapper">
                <button type="submit">Réinitialiser le mot de passe</button>
            </div>
        {{ form_end(resetForm) }}
    </section>
</main>
{% endblock %}

{% block scripts %}
    <script src="{{ asset('assets/js/checkSamePassword.js') }}"></script>
{% endblock %}